generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://root:password@127.0.0.1:27017/mydb?authSource=admin&replicaSet=rs0&directConnection=true&tls=false"
}

model Subject {
  code String @id @map("_id")
  label String
  description String?
  slots Slot[]
}

model Slot {
  id Int @id @map("_id") @db.Int
  dayOfWeek Int
  partOfDay Int
  lessonNo Int
  subjectCode String?
  subject Subject? @relation(fields: [subjectCode], references: [code])
  @@unique([dayOfWeek, partOfDay, lessonNo])
}
